<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Hospital departments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= @hospital.name %> departments</h1>
  </div>

  <div id="hospital_departments" class="min-w-full">
    <% @hospital_departments.each do |hospital_department| %>
      <%= render hospital_department %>
      <p>
        <%= link_to "Show this hospital department", hospital_department_path(id: hospital_department.id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
