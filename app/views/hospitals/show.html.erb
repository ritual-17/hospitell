<div class="mx-auto md:w-2/3 w-full flex-col">
  <h1 class="text-4xl ">
    <%= @hospital.name %>
  </h1>
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

  <div id="hospital_departments" class="min-w-full">
    <% @hospital.hospital_departments.each do |hospital_department| %>
      <%= render hospital_department %>
      <p>
        <%= link_to "Show this hospital department", hospital_department_path(id: hospital_department.id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
    <%= link_to "Back to hospitals", hospitals_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
