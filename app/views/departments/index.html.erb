<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Departments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Departments</h1>
  </div>

  <div id="departments" class="min-w-full">
    <% @departments.each do |department| %>
      <%= render department %>
      <p>
        <%= link_to "Show this department", department, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
